{
  "src": "./source",
  "dest": "./build",

  "html": {
    "src": "./build",
    "dest": "./build",
    "extensions": "['html', 'json', 'erb', 'haml']"
  },

  "static": {
    "src": "static",
    "dest": "./"
  },

  "javascripts": {
    "src": "assets/javascripts",
    "dest": "assets/javascripts"
  },

  "stylesheets": {
    "src": "assets/stylesheets",
    "dest": "assets/stylesheets"
  },

  "images": {
    "src": "assets/images",
    "dest": "assets/images"
  },

  "fonts": {
    "src": "assets/fonts",
    "dest": "assets/fonts"
  },

  "icons": {
    "src": "assets/icons",
    "dest": "assets/icons"
  }
}
