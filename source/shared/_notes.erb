<% content_tag(:ul, itemscope: 'itemscope', itemtype: 'http://schema.org/Blog') do %>
  <% blog('notes').articles[0...6].each do |article| %>
    <% content_tag(:li, class: 'preview', itemprop: 'blogPost', itemscope: 'itemscope', itemtype: 'http://schema.org/BlogPosting') do %>
      <% link_to("#{article.url}", { class: 'preview__link', itemprop: 'url' }) do %>
        <%= content_tag(:span, "#{article.data.date.strftime('%b %-d, %Y')}", class: 'preview__date', itemprop: 'datePublished', datetime: "#{article.data.date.strftime('%b %-d, %Y')}") %>
        <%= content_tag(:h2, "#{article.data.page_title}", class: 'preview__header', itemprop: 'name headline') %>
        <%= content_tag(:p, "#{article.data.description}", class: 'preview__excerpt', itemprop: 'description') %>
        <%= content_tag(:span, 'read more', class: 'preview__more') %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
