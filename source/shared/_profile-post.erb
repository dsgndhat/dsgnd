      <% content_tag(:div, class: 'profile__card') do %>
        <% content_tag(:div, class: 'profile__img') do %>
          <%= content_tag(:figure, nil, class: 'absolute-bg', style: "background-image: url('#{image_path(data.site.profile_image)}');") %>
        <% end %>
        <% content_tag(:div, class: 'profile__container') do %>
          <%= content_tag(:p, "#{data.site.profile_description}") %>
          <% content_tag(:ul, class: 'profile__social') do %>
            <%= partial 'shared/social', locals: { social: data.social.social } %>
          <% end %>
        <% end %>
      <% end %>
