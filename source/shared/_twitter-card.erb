  <!-- twitter card tags -->
  <meta name='twitter:card' content='summary'>
  <meta name='twitter:description' content='<%= page_description %>'>
  <% if page_title %>
  <meta name='twitter:title' content='<%= page_title %>'>
  <% else %>
  <meta name='twitter:title' content='<%= data.site.title %>'>
  <% end %>
  <meta name='twitter:url' content='<%= current_page_url %>'>
  <meta name='twitter:site' content='<%= data.site.twitter_username %>'>
  <meta name='twitter:creator' content='<%= data.site.twitter_username %>'>
  <meta name='twitter:domain' content='<%= data.site.url %>'>
  <meta name='twitter:image:src' content='<%= data.site.image %>'>
